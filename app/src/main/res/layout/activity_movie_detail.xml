<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/ll_movieDetail_padding"
    tools:context=".view.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_movieDetail_movieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_movieDetail_movieTitle_txtSize"
            android:textStyle="bold"
            tools:text="Title"/>

        <TextView
            android:id="@+id/tv_movieDetail_movieDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_movieDetail_movieDesc_txtSize"
            tools:text="Description"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/ll_movieDetail_padding"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/iv_movieDetail_movie_logo"
            android:layout_width="@dimen/iv_movieDetail_movieImage_width"
            android:layout_height="@dimen/iv_movieDetail_movieImage_height"
            tools:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ll_movieDetail_padding"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/ib_movieDetail_addMovieToFav"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_star_border_24"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/ib_movieDetail_deleteMovieFromFav"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_star_24"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>